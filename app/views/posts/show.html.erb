<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Link:</b>
  <%= @post.link %>
</p>

<p>
  <b>Votes:</b>
  <%= @post.votes.count %>
</p>

<%= render 'comments/form' %>

<h4>Comments:</h4>
<div>
  <% @post.comments.order('created_at DESC').each do |comment| %>
    <p><%= comment.message %></p>
    <p><%= comment.user.name %></p>
    <p><%= comment.created_at %></p>
  <% end %>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
