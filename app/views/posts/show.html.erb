<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b><br />
  <%= @post.title %>
</p>

<p>
  <b>Content:</b><br />
  <%= @post.content %>
</p>

<p>
  <b>Link:</b><br />
  <%= link_to @post.link, @post.link %>
</p>

<p>
  <%= @post.video_link.html_safe if @post.video_link? %>
</p>


<p>
  <b>Tags:</b><br />
  <%= raw @post.post_tags.map(&:name).map { |t| link_to t, post_tag_path(t) }.join(', ') %>
</p>

<%= image_tag @post.avatar.url if @post.avatar? %>

<p>
  <b>Votes:</b><br />
  <%= @post.votes.count %>
</p>

<%= render 'comments/form' %>

<h6>Comments:</h6>
<div>
  <% @comments.each do |comment| %>
    <p><%= comment.message %></p>
    <% from_time = Time.now %>
    <p><i><%= comment.user.name %> -</i> <i><%= distance_of_time_in_words(from_time, comment.created_at) %> ago</i></p>
  <% end %>
 <%= will_paginate @comments %>
</div>

<%= link_to 'Edit Your Post', edit_post_path(@post) %> |
<%= link_to 'All Posts', posts_path %>
