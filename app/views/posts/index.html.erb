<h1>Listing posts</h1>

<%= form_tag posts_path, :method => 'get' do %>
  <p>
    <%= label_tag(:search, "Search for Posts By Title or Link:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= link_to 'Create a New Post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Link</th>
    <th>Tags</th>
    <th>Upvotes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.link %></td>
    <td>Tags: <%= post.post_tag_list.map { |t| link_to t, post_tag_path(t) }.join(', ') %></td>
    <td><%= post.votes.count %></td>
    <td><%= link_to '+1', votes_path(:vote => {:post_id => post.id}), :method => :post %></td>
    <td><%= link_to 'Read More & Comment', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
