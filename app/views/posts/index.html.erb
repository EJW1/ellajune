<h1>Listing posts</h1>

<%= link_to 'Create a New Post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Link</th>
    <th>Points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.link %></td>
    <td><%= post.points %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
