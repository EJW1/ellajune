<h2>Sign up</h2>

<%= render "static_pages/community_guidelines" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>
  <br />
  <div><%= f.label :email, "Email (Required Field)" %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, "Password (Required Field)" %>\
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Password Confirmation (Required Field)" %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :username, "Username (Required field - Avoid Using Punctuation and Spaces)" %>
  <%= f.text_field :username %></div>

  <div><%= f.label :name, "Name (Required Field)" %>
  <%= f.text_field :name %></div>

  <div class="field">
  <%= f.label :interest_tag_list, "Your Interests (separated by commas)" %><br />
  <%= f.autocomplete_field :interest_tag_list, autocomplete_interest_tag_name_users_path, :"data-delimiter" => ', ' %>
  </div>

  <div><%= f.label :birthday %>
  <%= f.date_select :birthday, :start_year => 1908, :order => [:month, :day, :year] %></div><br />

  <div><%= f.label :website %>
  <%= f.text_field :website %></div>

  <div><%= f.label :city %>
  <%= f.text_field :city %></div>

  <div><%= f.label :state, "State or Province" %>
  <%= f.text_field :state %></div>

  <div><%= f.label :country %>
  <%= f.text_field :country %></div>

  <div><%= f.label :avatar, "Profile Picture" %>
  <div><%= f.file_field :avatar %></div>

  <br />
  <br />

  <div><%= f.submit "Sign up" %></div>
<% end %>
