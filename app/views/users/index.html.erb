<p id="notice"><%= notice %></p>

<h1>EllaJune Family</h1>
<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= label_tag(:search, "Search for Members By Name:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= label_tag(:citysearch, "Search for Members By City:") %>
    <%= text_field_tag :citysearch, params[:citysearch] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="interest_tag_cloud">
  <h6>User By Interests:</h6>
  <% interest_tag_cloud User.tag_counts, %w{s m l} do |interest_tag, css_class| %>
    <%= link_to interest_tag.name, interest_tag_path(interest_tag.name), class: css_class %>
  <% end %>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Interests</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= raw user.interest_tags.map(&:name).map { |t| link_to t, interest_tag_path(t) }.join(', ') %></td>
    <td><%= user.city %></td>
    <td><%= user.state %></td>
    <td><%= user.country %></td>
    <td><%= link_to 'View Profile', user %></td>
  </tr>
<% end %>
</table>

<br />